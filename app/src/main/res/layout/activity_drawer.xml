<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="350dp"
    android:layout_height="fill_parent"
    android:layout_gravity="start"
    android:background="#EDEAEA"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="113dp"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_exit"
        android:drawableTop="@drawable/codiya"
        android:gravity="center"
        android:padding="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_now"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_round2"
            android:drawableTop="@drawable/virus"
            android:paddingTop="25dp"
            android:text="코로나 정보"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_viewpager"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_round2"
            android:drawableTop="@drawable/news"
            android:paddingTop="25dp"
            android:text="실시간 뉴스"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mask"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_round2"
            android:drawableTop="@drawable/mask"
            android:paddingTop="15dp"
            android:text="마스크"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_safe"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_round2"
            android:drawableTop="@drawable/hospital"
            android:paddingTop="25dp"
            android:text="선별진료소"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_call"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_round2"
            android:drawableTop="@drawable/calling"
            android:paddingTop="22dp"
            android:text="전화하기       (1339)"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_board"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_round2"
            android:drawableTop="@drawable/board"
            android:paddingTop="22dp"
            android:text="자유게시판"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="272dp"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="★  현 재   사 회 적   거 리 두 기   1 단 계  ★"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_exit"
            android:drawableStart="@drawable/exit"
            android:paddingLeft="11dp" />

    </LinearLayout>

</LinearLayout>