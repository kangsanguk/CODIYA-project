<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"

    android:id="@+id/scrollView"
    android:background="#EEF1D2"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/bold"
            android:text=" 자유게시판 "
            android:textColor="#1D0101"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자"
            android:textSize="15dp"
            android:fontFamily="@font/bold"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/n1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:background="#fff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용작성  "
            android:textSize="15dp"
            android:fontFamily="@font/bold"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/n2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:inputType="none"
            android:background="#fff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="40dp"
            android:background="#000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#000"
                android:layout_margin="20dp"
                android:id="@+id/img2"
                android:src="@drawable/ddd"/>
            <Button
                android:id="@+id/btn_insert2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:text="업로드"

                android:background="@drawable/buttonshape3"
                android:shadowColor="#BD562A"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"/>

        </LinearLayout>

        <Button
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/buttonshape2"
            android:text="전체 글 살펴보기"
            android:id="@+id/b1"

            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:shadowColor="#0707A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="20dp"
            android:background="#000" />
    </LinearLayout>
</ScrollView>
